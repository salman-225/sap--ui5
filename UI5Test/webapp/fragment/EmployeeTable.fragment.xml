<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
<SearchField search="searchEmployee"/>
<Table id="employeeTable" items="{/Employee}">
              <headerToolbar>
                <Toolbar>
                    <Title text="Employees"/>
                    <ToolbarSpacer/>
                    <Button icon="sap-icon://add" text="{i18n>create}" press="createEmployee"/>
                    <Button icon="sap-icon://settings" press="openSettings"/>
                </Toolbar>
              </headerToolbar>
              <columns>
                <Column>
                  <Label text="Name"/>
                </Column>
                <Column>
                  <Label text="Email"/>
                </Column>
                <Column>
                  <Label text="Salary"/>
                </Column>
              </columns>
              <items>
                <ColumnListItem type="Navigation" press="navigate">
                  <Text text="{parts:[{path:'fname'},{path:'lname'}],formatter:'.formatName'}"/>
                  <Text text="{email}}"/>
                  <ObjectStatus text="{salary}" state="{= ${salary}>30?'Success':'Error'}"/>
                </ColumnListItem>
              </items>
            </Table>
</core:FragmentDefinition>